<!--
The TabView component provides a simple way to navigate between different views by
tapping on some of the tabs or by swiping between the views.
Learn more about the TabView component in this documentation article:
http://docs.nativescript.org/cookbook/ui/tab-view
-->
<TabView androidTabsPosition="bottom">
    <TabViewItem title="Routes" ios:iconSource="res://tabIcons/train" android:iconSource="res://train">
        <Frame defaultPage="home/home-items-page"></Frame>
    </TabViewItem>
    <TabViewItem title="Map" ios:iconSource="res://tabIcons/map" android:iconSource="res://map">
        <Frame defaultPage="map/map-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Near Me" ios:iconSource="res://tabIcons/marker" android:iconSource="res://marker">
        <Frame defaultPage="browse/browse-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Favorites" ios:iconSource="res://tabIcons/favorites" android:iconSource="res://favorites">
        <Frame defaultPage="favorites/favorites-page"></Frame>
    </TabViewItem>

    <TabViewItem title="Settings" ios:iconSource="res://tabIcons/settings" android:iconSource="res://settings">
        <Frame defaultPage="search/search-page"></Frame>
    </TabViewItem>
</TabView>
